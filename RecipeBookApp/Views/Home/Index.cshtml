    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4">
                <div class="card m-2">
                    <div class="card-header">
                        @recipe.Name
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>
                        <p class="card-text">@recipe.Description</p>
                        @Html.ActionLink("View Recipe", "Details", "Recipies", new { id = recipe.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        }

    </div>

