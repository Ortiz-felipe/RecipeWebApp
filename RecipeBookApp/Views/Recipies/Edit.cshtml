@model RecipeBookApp.Models.Recipe
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mt-3">
        <h2>@Model.Name</h2>
        <div class="container">
            <p>@Model.Description</p>
            <p>@Model.Ingredients</p>
            <p>Total Views: @Model.TotalViews</p>
            <p>Created By: @Model.UserId</p>
        </div>
    </div>


