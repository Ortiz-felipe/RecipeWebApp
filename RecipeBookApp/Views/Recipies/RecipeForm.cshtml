@model RecipeBookApp.ViewModel.RecipeFormViewModel
@{
    ViewBag.Title = "RecipeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <h2>@Model.Title</h2>
</div>
<br />
<div class="container mt-3">
    @using (Html.BeginForm("Save", "Recipies"))
    {
        <div class="form-group">
            @Html.LabelFor(r => r.Recipe.Name)
            @Html.TextBoxFor(r => r.Recipe.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(r => r.Recipe.Name, null, new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Recipe.Description)
            @Html.TextBoxFor(r => r.Recipe.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(r => r.Recipe.Description, null, new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Recipe.Ingredients)
            @Html.TextAreaFor(r => r.Recipe.Ingredients, new { @class = "form-control" })
            @Html.ValidationMessageFor(r => r.Recipe.Ingredients, null, new {@class = "text-danger"})
        </div>
        @Html.HiddenFor(r => r.Recipe.Id)
        @Html.HiddenFor(r => r.Recipe.UserId)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Send!</button>
    }
</div>

@section scripts
{
 @Scripts.Render("~/bundles/jqueryval")   
}

