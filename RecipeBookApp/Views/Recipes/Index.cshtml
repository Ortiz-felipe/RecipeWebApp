@model List<RecipeBookApp.Models.Recipe>
@{
    ViewBag.Title = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3">
    <h2 class="mt-3">Recipes</h2>

    @if (!Model.Any())
    {
        <p>Currently, We don't have any recipes to show...</p>
    }
    else
    {
        <div class="container mt-3 mb-3">
            @*<table class="table table-active">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Author</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(recipe.Name, "Edit", "Recipes", new { id = recipe.Id }, null)</td>
                            <td>@recipe.Description</td>
                            <td>@recipe.UserId</td>
                        </tr>
                    }
                </tbody>
            </table>*@
            <div class="row" id="recipes">
                @foreach (var recipe in Model)
                {
                    <div class="col-md-6">
                        <div class="card m-2">
                            <div class="card-header">
                                @recipe.Name
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@recipe.Name</h5>
                                <p class="card-text">@recipe.Description</p>
                                <p class="card-text">Total Views: @recipe.TotalViews</p>
                                @Html.ActionLink("View Recipe", "Details", "Recipes", new { id = recipe.Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    }
    <div class="container mt-3">
        <p>@Html.ActionLink("New Recipe", "New", "Recipes", null, new { @class = "btn btn-primary" })</p>
    </div>        
</div>


